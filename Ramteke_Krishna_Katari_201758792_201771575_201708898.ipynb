transitions = [
    ("A2→B", "seq_a2_b_status", "ct_a2_to_b_days"),
    ("B→C",  "seq_b_c_status",  "ct_b_to_c_days"),
    ("C→D",  "seq_c_d_status",  "ct_c_to_d_days"),
    ("D→E",  "seq_d_e_status",  "ct_d_to_e_days"),
]

MIN_N = 30   # minimum datapoints per manager to be shown (change as you like)
TOP_K = 10   # show top 10 slowest

def manager_stats_for_transition(tname, status_col, ct_col):
    return (
        df_analysis
        .filter(F.col(status_col) == "OK")
        .select("pm_clean", F.col(ct_col).cast("double").alias("cycle_days"))
        .filter(F.col("cycle_days").isNotNull() & (F.col("cycle_days") >= 0))
        .groupBy("pm_clean")
        .agg(
            F.count("*").alias("n"),
            F.expr("percentile_approx(cycle_days, 0.5)").alias("median_days"),
            F.expr("percentile_approx(cycle_days, 0.8)").alias("p80_days"),
            F.round(F.avg("cycle_days"), 1).alias("mean_days")
        )
        .filter(F.col("n") >= MIN_N)
        .withColumn("transition", F.lit(tname))
    )

def plot_top_managers_bar(df_stats, metric_col, title):
    pdf = (df_stats.orderBy(F.desc(metric_col)).limit(TOP_K)
                  .select("pm_clean", metric_col, "n").toPandas())
    plt.figure(figsize=(10, 4))
    plt.barh(pdf["pm_clean"][::-1], pdf[metric_col][::-1])
    plt.xlabel(f"{metric_col} (days)")
    plt.ylabel("Manager (pm)")
    plt.title(title)
    # annotate n
    for i, (val, n) in enumerate(zip(pdf[metric_col][::-1], pdf["n"][::-1])):
        plt.text(val, i, f"  n={int(n)}", va="center")
    plt.tight_layout()
    plt.show()

for tname, status_col, ct_col in transitions:
    stats = manager_stats_for_transition(tname, status_col, ct_col)
    display(stats.orderBy(F.desc("median_days")).limit(20))  # optional table
    plot_top_managers_bar(stats, "median_days", f"Top {TOP_K} Slowest Managers by Median Days — {tname} (n≥{MIN_N})")







TOP_K = 10
MIN_N_A2E = 15  # fewer datapoints usually for full lifecycle

df_a2e_mgr = (
    df_analysis
    .filter(F.col("Gate A2 Decision Date").isNotNull() & F.col("Gate E Decision Date").isNotNull())
    .withColumn("total_A2_to_E_days", F.datediff(F.col("Gate E Decision Date"), F.col("Gate A2 Decision Date")))
    .filter(F.col("total_A2_to_E_days").isNotNull() & (F.col("total_A2_to_E_days") >= 0))
    .groupBy("pm_clean")
    .agg(
        F.count("*").alias("n"),
        F.expr("percentile_approx(total_A2_to_E_days, 0.5)").alias("median_total_days"),
        F.expr("percentile_approx(total_A2_to_E_days, 0.8)").alias("p80_total_days"),
        F.round(F.avg("total_A2_to_E_days"), 1).alias("mean_total_days")
    )
    .filter(F.col("n") >= MIN_N_A2E)
)

display(df_a2e_mgr.orderBy(F.desc("median_total_days")).limit(30))

pdf = (df_a2e_mgr.orderBy(F.desc("median_total_days")).limit(TOP_K)
               .select("pm_clean", "median_total_days", "n").toPandas())

plt.figure(figsize=(10, 4))
plt.barh(pdf["pm_clean"][::-1], pdf["median_total_days"][::-1])
plt.xlabel("Median total A2→E (days)")
plt.ylabel("Manager (pm)")
plt.title(f"Top {TOP_K} Slowest Managers by Total A2→E (Median) (n≥{MIN_N_A2E})")
for i, (val, n) in enumerate(zip(pdf["median_total_days"][::-1], pdf["n"][::-1])):
    plt.text(val, i, f"  n={int(n)}", va="center")
plt.tight_layout()
plt.show()
